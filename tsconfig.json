{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "jsx": "react",
        "declaration": true,
        "outDir": "lib",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true
    }
}
